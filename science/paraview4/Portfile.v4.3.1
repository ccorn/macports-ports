                md5 d03d3ab504037edd21306413dff64293 \
                sha1 9c0666ea13ebde3fe9a92cf24255c42a6a20cf79 \
                rmd160 19cca578183e648af666fe2cb2fc5bfc97fb5406
# std::min(unsigned,signed) arg type deduction problem fix
patchfiles      patch_VTK_Rendering_FreeType_vtkFreeTypeTools_cxx.diff

depends_build   port:cmake
depends_lib     port:expat \
                port:freetype \
                port:hdf5 \
                port:jpeg \
                port:jsoncpp \
                port:libxml2 \
                port:netcdf-cxx \
                port:libogg port:libtheora \
                port:libpng \
