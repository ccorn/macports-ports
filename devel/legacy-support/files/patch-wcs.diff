+wchar_t *wcpncpy(wchar_t *__restrict d, const wchar_t *__restrict s, size_t n)
+{
+    wint_t c;
+    while (n && (c = *s)) --n, *d++ = c, ++s;
+    return wmemset(d, 0, n);
